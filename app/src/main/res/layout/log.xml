<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474363"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="450dp"

    android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/login"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/background_gradient"

        app:layout_constraintTop_toTopOf="parent"
        android:isScrollContainer="false"

        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Cep Pos"
                    android:text="OZAN"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Plus Konsol Limited Şirketi"
                    android:textColorHint="@color/white"
                    android:textSize="15dp"
                    android:textStyle="normal" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/text_tx"
                        android:gravity="center"
                        android:hint="******"
                        android:textSize="40dp"
                        android:textStyle="italic" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="80dp"
                        android:layout_marginTop="35dp"

                        android:background="@drawable/btn_lgn"
                        android:text="GİRİŞ YAP"
                        android:textAllCaps="false"
                        app:backgroundTint="@null" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="80dp"
                        android:layout_marginVertical="25dp"

                        android:background="@drawable/btn_bg"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:text="PARMAK İZİ"
                        android:textAllCaps="false"
                        app:backgroundTint="@null"
                        app:icon="@drawable/parmak"
                        app:iconSize="25dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    <View
        android:id="@+id/view_back"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_header"
        android:layout_width="130dp"
        android:layout_height="118dp"
        android:layout_marginHorizontal="140dp"


        android:background="@android:color/transparent"
        app:cardCornerRadius="250dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_back"
        app:layout_constraintEnd_toEndOf="@+id/view_back"
        app:layout_constraintStart_toStartOf="@+id/view_back"
        app:layout_constraintTop_toBottomOf="@+id/view_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="130dp"
            android:layout_height="119dp"
            android:background="@drawable/circle">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="119dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:scaleType="centerCrop"
                android:src="@drawable/ozan1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="2dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>